<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100px"-->
<!--        android:text="Recommended Calories"-->
<!--        android:gravity="center"-->
<!--        android:background="#ff0072"-->
<!--        android:textSize="18dp"-->
<!--        android:textStyle="italic"-->
<!--        android:textColor="@color/white"-->
<!--        />-->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"


        >

        <!-- 키 입력 프레임 -->
        <LinearLayout
            android:id="@+id/inputh"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="100dp"

                    />

                <EditText
                    android:id="@+id/tv_height"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"
                    android:inputType="number"
                    android:hint="Cm"
                    android:layout_marginRight="100dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#ff0072"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="100dp"

                    />

                <EditText
                    android:id="@+id/tv_weighti"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"
                    android:inputType="number"
                    android:hint="Kg"
                    android:layout_marginRight="100dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#ff0072"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/hb01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ff0072"
                android:text="submit"
                android:layout_marginTop="50dp"
                />

        </LinearLayout>
        <!-- 키 입력 프레임 끝 -->

        <!-- 표준 체중 출력 -->
        <LinearLayout
            android:id="@+id/printh"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Standard weight"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="표준체중 출력"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                />



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                >
                <Button
                    android:id="@+id/callButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활동 정도 선택"
                    android:layout_gravity="center"
                    android:backgroundTint="#ff0072"
                    android:layout_marginTop="50dp"
                    />
                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활동 정도란?"
                    android:layout_gravity="center"
                    android:backgroundTint="#ff0072"
                        />




            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultlin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30dp"
                android:text="권장 섭취량"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/result1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="100dp"
                >
                <Button
                    android:id="@+id/retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retry"
                    android:backgroundTint="#ff0072"

                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activitys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"

            >

            <ImageView

                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:src="@drawable/activity63"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </FrameLayout>

</LinearLayout>



